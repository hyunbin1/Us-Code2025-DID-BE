    "/members": {
      "get": {
        "tags": ["Member"],
        "summary": "회원 목록 조회 (페이징)",
        "description": "관리자용: 전체 회원 정보를 페이징 처리하여 조회합니다.",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 0 } },
          { "name": "size", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "회원 페이지 반환",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MemberPage" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Member"],
        "summary": "회원 가입",
        "description": "신규 회원을 등록합니다. 비밀번호는 bcrypt로 암호화되어 저장됩니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MemberCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MemberCreateResponse" }
              }
            }
          }
        }
      }
    },
    "/members/info": {
      "get": {
        "tags": ["Member"],
        "summary": "내 정보 조회",
        "description": "로그인한 회원의 기본 정보를 조회합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "회원 정보 반환",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MemberInfoResponse" }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["Member"],
        "summary": "내 정보 수정",
        "description": "회원 정보(비밀번호 제외)를 수정합니다. 이메일을 변경하면 안 됩니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MemberUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "수정된 회원 정보 반환",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MemberInfoResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Member"],
        "summary": "회원 탈퇴",
        "description": "비밀번호 확인 후 회원 정보를 삭제합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": { "type": "string" }
                },
                "required": ["password"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "성공적인 탈퇴 (No Content)"
          }
        }
      }
    },
    "/members/info/password": {
      "patch": {
        "tags": ["Member"],
        "summary": "비밀번호 변경",
        "description": "현재 비밀번호와 새 비밀번호를 입력하여 비밀번호를 변경합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" },
            "description": "Bearer Token"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": { "type": "string" },
                  "newPassword": { "type": "string" }
                },
                "required": ["password", "newPassword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "비밀번호 변경 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "data": { "type": "string", "nullable": true },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                },
                "example": {
                  "status": "API 요청 성공",
                  "data": null,
                  "timestamp": "2025-02-11T03:23:16.761Z"
                }
              }
            }
          }
        }
      }
    },
    "/members/check-nickname": {
      "get": {
        "tags": ["Member"],
        "summary": "닉네임 중복 확인",
        "description": "요청된 닉네임이 이미 존재하는지 확인합니다. 중복일 경우 true, 중복이 없으면 false를 반환합니다.",
        "parameters": [
          {
            "name": "nickname",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "홍길동"
            },
            "description": "중복 확인할 닉네임"
          }
        ],
        "responses": {
          "200": {
            "description": "닉네임 중복 여부 반환",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "SUCCESS"
                    },
                    "data": {
                      "type": "boolean",
                      "example": false,
                      "description": "true면 중복, false면 사용 가능"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Member"],
        "summary": "로그인",
        "description": "이메일과 비밀번호로 로그인하고 accessToken과 refreshToken을 발급받습니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": { "type": "string" },
                    "refreshToken": { "type": "string" },
                    "introStatus": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Member"],
        "summary": "로그아웃",
        "description": "로그아웃 처리 후 메시지를 반환합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" },
            "description": "Bearer Token"
          }
        ],
        "responses": {
          "200": {
            "description": "로그아웃 성공 메시지",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } } }
          }
        }
      }
    },
    "/auth/reissue": {
      "post": {
        "tags": ["Member"],
        "summary": "토큰 재발급",
        "description": "refresh token을 통해 새로운 access token을 발급합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "재발급 성공",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ReissueResponse" } } }
          },
          "400": {
            "description": "토큰 검증 실패",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "status": { "type": "integer" }, "error": { "type": "string" }, "message": { "type": "string" } } } } }
          }
        }
      }
    },
    "/member/email/verify": {
      "post": {
        "tags": ["Email"],
        "summary": "이메일 인증코드 발송",
        "description": "회원가입 시 이메일 인증코드를 발송합니다. 5분간 유효하며 재발급 시 최신 코드만 유효합니다.",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "email": { "type": "string" } }, "required": ["email"] } } }
        },
        "responses": {
          "200": {
            "description": "인증메일 발송 완료",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "status": { "type": "string" }, "data": { "type": "string" }, "timestamp": { "type": "string", "format": "date-time" } } },
                "example": { "status": "API 요청 성공", "data": "인증 코드가 이메일로 발송되었습니다.", "timestamp": "2025-04-14T15:55:35.34822" }
              }
            }
          }
        }
      }
    },
    "/member/email/check": {
      "post": {
        "tags": ["Email"],
        "summary": "이메일 인증코드 체크",
        "description": "회원가입 시 받은 인증코드를 검증합니다. 유효 시간 5분, 재발급 시 최신 코드만 허용.",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "email": { "type": "string" }, "code": { "type": "string" } }, "required": ["email", "code"] } } }
        },
        "responses": {
          "200": {
            "description": "인증 결과 반환",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "status": { "type": "string" }, "data": { "type": "object", "properties": { "email": { "type": "string" }, "matched": { "type": "boolean" } } }, "timestamp": { "type": "string", "format": "date-time" } } },
                "example": { "status": "API 요청 성공", "data": { "email": "skaqhfk00@mju.ac.kr", "matched": true }, "timestamp": "2025-04-14T15:56:36.118848" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PostItem": {
        "type": "object",
        "properties": {
          "uuid": { "type": "string", "format": "uuid" },
          "title": { "type": "string" },
          "previewContent": { "type": "string" },
          "contentImages": { "type": "array", "items": { "type": "string", "format": "uri" } },
          "viewCount": { "type": "integer" },
          "published": { "type": "boolean" },
          "publishedAt": { "type": "string", "format": "date-time" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "likeCount": { "type": "integer" },
          "commentCount": { "type": "integer" },
          "author": { "type": "string" },
          "liked": { "type": "boolean" }
        }
      },
      "ProfileCommentItem": {
        "type": "object",
        "properties": {
          "boardUuid": { "type": "string", "format": "uuid" },
          "boardTitle": { "type": "string" },
          "boardPreviewContent": { "type": "string" },
          "commentUuid": { "type": "string", "format": "uuid" },
          "commentPreviewContent": { "type": "string" }
        }
      },
      "MemberPage": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "content": { "type": "array", "items": { "$ref": "#/components/schemas/MemberItem" } },
              "totalPages": { "type": "integer" },
              "totalElements": { "type": "integer" },
              "size": { "type": "integer" },
              "number": { "type": "integer" },
              "sort": {
                "type": "object",
                "properties": {
                  "empty": { "type": "boolean" },
                  "sorted": { "type": "boolean" },
                  "unsorted": { "type": "boolean" }
                }
              },
              "first": { "type": "boolean" },
              "last": { "type": "boolean" },
              "numberOfElements": { "type": "integer" },
              "empty": { "type": "boolean" }
            }
          },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "MemberItem": {
        "type": "object",
        "properties": {
          "uuid": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "introStatus" : { "type": "boolean" },
          "gender": { "type": "string", "enum": ["MALE", "FEMALE", "OTHER"] },
          "nickname": { "type": "string" }
        }
      },
      "MemberCreateRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" },
          "gender": { "type": "string", "enum": ["MALE","FEMALE","OTHER"] },
          "nickname": { "type": "string" }
        },
        "required": ["name", "email", "password"]
      },
      "MemberCreateResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
